# Creo SaaS Platform Environment Variables
# Copy this file to .env.local and fill in your values

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================
# Get these from your Supabase project dashboard
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# =============================================================================
# ADMIN USER (WILL BE CREATED IN SUPABASE)
# =============================================================================
# Admin credentials (created via setup script)
ADMIN_EMAIL=admin@creo.com
ADMIN_PASSWORD=CreoAdmin2024!

# =============================================================================
# NEHTW API CONFIGURATION
# =============================================================================
# Get these from NEHTW API documentation
NEXT_PUBLIC_NEHTW_API_KEY=your_nehtw_api_key_here
NEXT_PUBLIC_NEHTW_BASE_URL=https://nehtw.com/api

# =============================================================================
# VIRTUAL PAYMENT SYSTEM (DEVELOPMENT)
# =============================================================================
# Virtual payment system for testing (no real Stripe keys needed)
NEXT_PUBLIC_VIRTUAL_PAYMENTS=true
NEXT_PUBLIC_PAYMENT_SUCCESS_RATE=0.9

# =============================================================================
# STRIPE CONFIGURATION (OPTIONAL - FOR REAL PAYMENTS)
# =============================================================================
# Uncomment and configure when ready for real payments
# STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
# STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
# STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Application environment
NODE_ENV=production

# Application URL (for webhooks and redirects)
NEXT_PUBLIC_APP_URL=https://your-app.vercel.app

# =============================================================================
# OPTIONAL: MONITORING & ANALYTICS
# =============================================================================
# Sentry for error tracking
# SENTRY_DSN=your_sentry_dsn_here

# Vercel Analytics
# VERCEL_ANALYTICS_ID=your_analytics_id_here

# =============================================================================
# OPTIONAL: EMAIL CONFIGURATION
# =============================================================================
# For sending emails (if using custom email service)
# SMTP_HOST=smtp.your-provider.com
# SMTP_PORT=587
# SMTP_USER=your_email@domain.com
# SMTP_PASS=your_email_password
